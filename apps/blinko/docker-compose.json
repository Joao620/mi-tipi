{
  "services": [
    {
      "name": "blinko-website",
      "image": "blinkospace/blinko:latest",
      "environment": {
        "DATABASE_URL": "postgresql://postgres:${DB_ROOT_PASSWORD}@blinko-postgres:5432/postgres"
      },
      "internalPort": 1111,
      "healthCheck": {
        "test": "CMD curl -f http://blinko-website:1111/",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5,
        "start_period": "30s"
      },
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "dependsOn": {
        "postgres": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "blinko-postgres",
      "image": "postgres:14",
      "environment": {
        "POSTGRES_DB": "postgres",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "${DB_ROOT_PASSWORD}",
        "TZ": "Asia/Shanghai"
      },
      "internalPort": 5432,
      "healthCheck": {
        "test": "CMD pg_isready -U postgres -d postgres",
        "interval": "5s",
        "timeout": "10s",
        "retries": 5
      }
    }
  ]
}